@{
    ViewBag.Title = "Modificar Poliza";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modificar Poliza </title>

    <script src="~/assets/js/App/Poliza/PolizaModify.js"></script>
</head>
<body>
    <div>

        <div class="row bg-title">
            <div class="panel panel-primary">
                <div class="panel-heading"><h4 class="page-title">@ViewBag.Title : <label id="lblIdPoliza"></label></h4></div>

                <div class="panel-body">

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Nombre Poliza</label>
                        <div class="col-4">
                            <input class="form-control" type="text" id="txtNombrePoliza">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Tipo Cubrimiento</label>
                        <div class="col-4">
                            <select id="selTipoCubrimeinto" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-date-input" class="col-2 col-form-label">Fecha Inicio Poliza</label>
                        <div class="col-10">
                            <input class="form-control" type="date" id="dtFechaInicioPoliza" value="2017-06-01" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Meses Cobertura</label>
                        <div class="col-4">
                            <input class="form-control" type="number" id="txtMesesCobertura">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Valor Poliza</label>
                        <div class="col-4">
                            <input class="form-control currency" type="number" id="txtValorPoliza" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Tipo Riesgo</label>
                        <div class="col-4">
                            <select id="selTipoRiesgo" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea">Descripción</label>
                        <textarea class="form-control" id="txtDescripcion" rows="3" maxlength="500"></textarea>
                    </div>


                    <div class="form-group">

                        <button type="button" class="btn btn-primary pull-right" id="btnGuardar">Guardar Poliza</button>
                        <a href="/Poliza/Poliza" class="btn btn-warning pull-right">Cancelar</a>

                    </div>



                </div>






            </div>


        </div>



    </div>
</body>
</html>
